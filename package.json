{
  "name": "pika",
  "version": "1.0.0",
  "description": "A comprehensive financial management solution for WordPress that helps users track income, expenses, transfers, and manage their financial data with a modern PWA interface.",
  "main": "index.js",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "start": "npx @wp-now/wp-now start --blueprint=./blueprint.json",
    "buildwp": "wp-scripts build",
    "build": "npm-run-all --sequential buildwp tailwindbuild",
    "wpstart": "wp-scripts start",
    "start-dev": "npm-run-all --parallel wpstart tailwindwatch",
    "tailwindbuild": "npx @tailwindcss/cli -i ./backend-dev/main.css -o ./backend/admin/build/main.css --minify",
    "tailwindwatch": "npx @tailwindcss/cli -i ./backend-dev/main.css -o ./backend/admin/build/main.css --watch --minify"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/e-labInnovations/pika.git"
  },
  "author": "Mohammed Ashad",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/e-labInnovations/pika/issues"
  },
  "homepage": "https://github.com/e-labInnovations/pika#readme",
  "keywords": [
    "wordpress",
    "plugin",
    "financial",
    "management",
    "pwa",
    "react",
    "budget",
    "expenses",
    "income"
  ],
  "devDependencies": {
    "@babel/plugin-transform-runtime": "^7.28.3",
    "@babel/preset-react": "^7.27.1",
    "@babel/preset-typescript": "^7.27.1",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "@wordpress/scripts": "^30.21.0",
    "npm-run-all": "^4.1.5",
    "tailwindcss": "^4.1.12",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "@wordpress/api-fetch": "^7.29.0",
    "clsx": "^2.1.1",
    "lucide-react": "^0.541.0",
    "recharts": "^3.1.2",
    "tailwind-merge": "^3.3.0"
  }
}
